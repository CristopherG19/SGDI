# ===================================
# SGDI - Configuración de Entorno
# Copiar este archivo a .env y ajustar valores
# ===================================

# Configuración General
APP_NAME=SGDI
APP_VERSION=1.0.0
DEBUG_MODE=True

# Configuración de Base de Datos
DATABASE_PATH=data/database/sgdi.db

# Rutas de Trabajo
DEFAULT_EXPORT_PATH=C:/SGDI/exports
DEFAULT_TEMP_PATH=C:/SGDI/temp
LOG_PATH=data/logs

# Configuración de Compresión PDF
PDF_COMPRESSION_QUALITY=70
PDF_MAX_IMAGE_DPI=150

# Configuración de QR
QR_DEFAULT_SIZE=300
QR_ERROR_CORRECTION=H

# Configuración de códigos INACAL
INACAL_CODES_PATH=C:/INACAL-PDF/codigos_unicos.txt
INACAL_EXPORT_PATH=C:/INACAL-PDF

# Configuración de UI
THEME=darkly
WINDOW_SIZE=1400x900
WINDOW_TITLE=SGDI - Sistema de Gestión Documental Integral

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
